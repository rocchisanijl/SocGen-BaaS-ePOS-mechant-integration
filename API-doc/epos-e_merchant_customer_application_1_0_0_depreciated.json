          },
          "shoppingCartTotalQuantity" : {
            "type" : "string",
            "description" : "Total quantity of all products in the basket.",
            "example" : "2"
          },
          "SKU" : {
            "type" : "string",
            "description" : "Merchantâ€™s product identifier code.",
