          "orderId" : {
            "type" : "string",
            "description" : "Merchant order Id ID."
          },
          "customerId" : {
            "type" : "string",
            "description" : "Merchant customer Id reference."
          },
          "createdOn" : {
            "type" : "string",
            "description" : "Customer application date creation.",
            "format" : "date-time"
          },
          "modifiedOn" : {
            "type" : "string",
            "description" : "Customer application modification date.",
